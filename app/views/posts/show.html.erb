<h2>Show Posts</h2>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>


<p>
  <%= link_to 'Back', root_path %>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are You sure'} %>
</p>