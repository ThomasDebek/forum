<h2>Welcome in placehoder </h2>


<table>
  <tr>
    <th>Title:</th>
    <th>Content:</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are You sure'} %></td>
  </tr>
  <% end %>

</table>

<h2><%= link_to 'New Posts', new_post_path %></h2>